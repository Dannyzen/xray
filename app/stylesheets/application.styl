@import 'nib'
@require '_colors'
@require '_mixins'
@require '_animations'

@require '_cells'
@require '_containers'
@require '_zones'
@require '_sidebar'

html, body, #root, .xray
  min-height: 100%
  @extend $full-height

body
  background-color: $black

.receptor-url-modal
  input[type="text"]
    @extend $full-width

.page
  @extend $full
  display(flex)
  flex-direction(row)
  .main-panel
    flex(1)
    position: relative
  .sidebar-panel
    width: sidebar-width

.panel-scrollable
  max-height: inherit //Talk to Pivotal UI about this

.clickable
  cursor: pointer

.scrim
  @extend $zero
  z-index: 1000