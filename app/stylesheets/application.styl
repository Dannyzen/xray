@import 'nib'
@require '_colors'
@require '_mixins'

html, body, #root, .xray
  min-height: 100%
  @extend $full-height

body
  background-color: $black

.receptor-url-modal
  input[type="text"]
    @extend $full-width

gutter = 5px

.zone
  header
    background-color: $dark-gray
    color: $white
  h2
    margin: 0 gutter * 2
  & + .zones
    margin-top: gutter


.cells
  color: $white
  overflow: hidden
  margin: gutter 0
  .cell
    align-items(center)
    display(flex)
    flex-direction(row)
    background-color: $dark-gray
    margin: 5px
    padding: 0 gutter
    min-height: 30px + 2 * gutter
  ul
    margin: 0
  .cell-id, .actual-lrp
    box-sizing(border-box)

  .cell-id
    width: 100px
    margin-right: 10px
  .actual-lrp
    width: 2%
    background-color: pink
    height: 30px
    margin: gutter 1px
