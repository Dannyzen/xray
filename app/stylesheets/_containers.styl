.container
  box-sizing(border-box)
  display: block
  height: 30px
  margin: gutter 1px
  width: 2%
  &.flex
    flex(1)
  &.undesired
    background-color: transparent
    position: relative
    &:before
      @extend $zero
      @extend $full
      content: ''
      border: 3px solid $white
  &.claimed
    animation(pulse 1s linear infinite alternate)
  &.faded
    opacity(0.3)
  &.hover
    position: relative
    &:before
      @extend $full
      @extend $zero
      content: ''
      box-shadow(0 0 8px rgba(255, 255, 255, 0.5));
      border-radius(3px)