.container
  box-sizing(border-box)
  display: block
  height: 30px
  margin: gutter 1px
  width: 2%
  &.flex
    flex(1)
  &.undesired
    background-color: transparent
    position: relative
    &:before
      @extend $zero
      @extend $full
      content: ''
      border: 3px solid $white
  &.claimed
    animation(pulse 1s linear infinite alternate)