@require '_variables'
@require '_mixins'

.container-sidebar
  .selection &
    @extend $selected
  width: container-height
  height: container-height
  display: block

.sidebar-panel, .sidebar-body, .sidebar
  @extend $full-height

.sidebar
  display(flex)
  flex-direction(column)
  .media, .media-body
    overflow: hidden
  .media-body, .media-left, .media-right
    display: block
  .media-body
    width: auto
  .media-left
    float: left
  .desired-lrps
    @extend $scrollable-y
    flex(1)
  .desired-lrp
    margin: 0
  .routes
    a
      &:hover
        text-decoration: underline
    table
      @extend $full-width
      table-layout: fixed
    td
      vertical-align: top
      &.port
        width: 45px
  .detail .container-sidebar
    opacity(1)

.actual-lrps
  @extend $full-width
  table-layout: fixed
  font-size: 18px
  .index, .since
    width: 15%
  .state
    text-transform: capitalize